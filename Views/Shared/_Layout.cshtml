@{
    Layout = null;
    var isAuth = Context.User?.Identity?.IsAuthenticated ?? false;
    var name = isAuth ? Context.User!.Identity!.Name : "Guest";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>fronteggnetmvcsample</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header class="header">
    <div class="logo">Frontegg ASP.NET Core MVC Sample</div>
    <nav>
        <a href="/">Home</a>
        <a href="/Dashboard">Dashboard</a>
        @if (!isAuth)
        {
            <a class="btn" href="/login">Sign in</a>
        }
        else
        {
            <form style="display:inline" action="/logout" method="post">
                @Html.AntiForgeryToken()
                <button class="btn" type="submit">Sign out (@name)</button>
            </form>
        }
    </nav>
</header>
<main class="container">
    @RenderBody()
</main>
</body>
</html>
