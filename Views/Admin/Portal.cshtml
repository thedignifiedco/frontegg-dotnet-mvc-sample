@{
    ViewData["Title"] = "Admin Portal";
    
    // Get the Frontegg authority from environment variables
    var fronteggAuthority = Environment.GetEnvironmentVariable("FRONTEGG_AUTHORITY") ?? "https://dignifiedlabs-dev.frontegg.com";
    var adminPortalUrl = $"{fronteggAuthority}/oauth/portal/";
}

<div class="admin-portal-container">
    <div class="admin-header">
        <h1>Admin Portal</h1>
        <p>Access the Frontegg Admin Portal to manage your application settings and user management.</p>
    </div>
    
    <div class="admin-content">
        <div class="admin-card">
            <div class="admin-card-icon">üîß</div>
            <h3>Frontegg Admin Portal</h3>
            <p>Manage users, authentication settings, and application configuration through the Frontegg hosted Admin Portal.</p>
            
            <div class="admin-actions">
                <a href="@adminPortalUrl" 
                   target="_blank" 
                   rel="noopener noreferrer" 
                   class="admin-portal-button">
                    <span>üöÄ</span>
                    Open Admin Portal
                </a>
                
                <div class="admin-info">
                    <p><strong>Security Note:</strong> The Admin Portal will open in a new tab to ensure proper functionality and security.</p>
                    <p><strong>URL:</strong> <code>@adminPortalUrl</code></p>
                </div>
            </div>
        </div>
        
        <div class="admin-features">
            <h3>Available Features</h3>
            <ul>
                <li>üë• User Management</li>
                <li>üîê Authentication Settings</li>
                <li>üìä Analytics & Reports</li>
                <li>‚öôÔ∏è Application Configuration</li>
                <li>üîë API Keys Management</li>
                <li>üì± Multi-factor Authentication</li>
                <li>üîí Security Policies</li>
                <li>üìà Usage Analytics</li>
            </ul>
        </div>
    </div>
    
    <div class="admin-security-note">
        <h4>üîí Security Information</h4>
        <p>The Admin Portal is opened in a new tab rather than embedded for security reasons:</p>
        <ul>
            <li><strong>X-Frame-Options Protection:</strong> Frontegg prevents embedding to protect against clickjacking attacks</li>
            <li><strong>JavaScript Security:</strong> Embedded iframes with JavaScript can pose security risks</li>
            <li><strong>Full Functionality:</strong> Opening in a new tab ensures all features work properly</li>
            <li><strong>Session Management:</strong> Direct access maintains proper authentication flow</li>
        </ul>
    </div>
</div>

